<%-include('partials/header.ejs')%>
<body class="h-full">
  <% if (locals.user) {%>
    <h1>WELCOME BACK <%= user.username %></h1>
    <a href="/log-out">LOG OUT</a>
  <% } else { %>
    <div class="flex min-h-full flex-col justify-center px-6 py-12">
      <h1 class="text-5xl font-bold text-center text-gray-600">
        <i class="fa-solid fa-folder"></i>
        File Uploader
      </h1>
      <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
        <h2 class="mt-10 text-center text-2xl/9 font-bold  text-gray-900">Sign in to your account</h2>
      </div>
      <div class="mt-2 sm:mx-auto sm:w-full sm:max-w-sm">
        <form action="/auth/login" class="space-y-4" method="POST">
          <%- include("partials/LoginErrors.ejs") %>
          <div>
            <label for="username" class="block text-sm/6 font-semibold text-gray-900" >Username</label>
          </div>
          <div class="mt-2">
            <input id="username" required name="username" placeholder="Username" type="text" class="block w-full rounded-md px-3 py-2 outline-1 outline-gray-400 -outline-offset-1 focus:outline-2 focus:outline-offset-2 focus:outline-blue-600 sm:text-sm/5" />
          </div>
          <div>
            <label for="password" class="block text-sm/6 font-semibold text-gray-900 ">Password</label>
          </div>
          <div>
            <input id="password" placeholder="password" name="password" type="password" class="block w-full px-3 py-2 rounded-md outline-1 outline-gray-400 -outline-offset-1 focus:outline-2 focus:outline-blue-600 focus:-outline-offset-2 sm:text-sm/5" />
          </div>
          <div>
            <button type="submit" class="mt-7 flex w-full justify-center bg-blue-500 px-3 py-1.5 rounded-md font-semibold text-white sm:text-sm/5 hover:bg-blue-600 focus-visible:outline-2 focus-visible:-outline-offset-2 hover:cursor-pointer" >Log In</button>
          </div>
        </form>
        <p class="mt-6 text-center text-sm/6 text-gray-500">Not a member? <a href="/auth/register"class="text-base font-semibold hover:cursor-pointer hover:text-gray-600">Sign up now!</a></p>
      </div>
    </div>
  <%}%>

</body>
</html>