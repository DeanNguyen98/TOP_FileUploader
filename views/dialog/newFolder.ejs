<div style="
display: none;
justify-content: center;
align-items: center;
width: 100%;
height: 100%;
position: fixed;
top: 0;
left: 0;
background: rgba(0, 0, 0, 0.4);
z-index: 50;
"  id="New-folder-dialog">
  <div class="flex flex-col sm:w-sm px-3 py-6 bg-white rounded-xl">
    <h2 class="text-center text-md/6 mb-4 text-gray-600 font-semibold">New Folder</h2>
    <form action="/user/createFolder" method="POST">
        <div class="flex justify-center">
            <input type="text" id="folderName" name="folderName" placeholder="Enter folder name" class="px-2 py-1.5 outline-1 -outline-offset-1 outline-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-blue-400 text-sm/5 rounded-md" required>
            <button type="submit" class="ml-1 text-sm text-grey-400 bg-blue-400 cursor-pointer px-2 py-1 rounded-xs text-white" >Create Folder</button>
        </div>
        <div class="mt-2 sm:w-full flex justify-center">
            <button type="button" class="text-sm text-grey-400 bg-blue-400 cursor-pointer px-2 py-1 rounded-xs text-white" onclick="closeNewFolderDialog()">Cancel</button>
        </div>
    </form>
  </div>
</div>